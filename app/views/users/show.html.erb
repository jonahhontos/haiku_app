<h1><%= @user.username %></h1>
<% @user.haikus.each do |h| %>
  <h3><%= h.title %></h3>
  <p><%= h.body %></p>
<% end %>
<hr>
<%= link_to "Edit User", edit_user_path(@user) %>
<%= link_to "Delete User", destroy_user_path(@user), method: :delete, data: {confirm: "Really?"} %>
<%= link_to "Back", users_path %>
